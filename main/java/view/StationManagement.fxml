<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<fx:root type="VBox" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="main.java.controller.StationManagement">
    <padding><Insets top="5" right="5" bottom="5" left="5"/></padding>

    <TableView fx:id="stationTable"/>

    <HBox>
        <VBox.margin>
            <Insets left="0" right="0" top="5" bottom="5"/>
        </VBox.margin>
        <Button fx:id="createBtn" text="Create New Station" onAction="#createStation"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="viewBtn" text="View Station" onAction="#viewStation"/>
    </HBox>

    <HBox>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Back"
                onAction="#back"/>
    </HBox>

</fx:root>
